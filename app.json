{
  "expo": {
    "name": "BidX",
    "slug": "bidx",
    "owner": "bidx",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "bidx-mobile-app",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "notification": {
      "icon": "./assets/images/icon_android.png",
    },
    "ios": {
      "icon": "./assets/images/icon.png",
      "supportsTablet": true,
      "bundleIdentifier": "io.bidx.client",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "remote-notification"
        ]
      },
      "associatedDomains": [
        "webcredentials:app.bidx.io",
        "applinks:app.bidx.io"
      ],
      "entitlements": {
        "aps-environment": "production"
      },
      "googleServicesFile": "./keys/GoogleService-Info.plist"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon_android.png"
      },
      "package": "io.bidx.client",
      "edgeToEdgeEnabled": true,
      "googleServicesFile": "./keys/google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-web-browser",
      "@react-native-google-signin/google-signin",
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "extraPods": [
              { "name": "GoogleUtilities", "modular_headers": true },
              { "name": "nanopb", "modular_headers": true }
            ]
          },
          "android": {
            "extraMavenRepos": [
              "../../node_modules/@notifee/react-native/android/libs"
            ]
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash_screen.png",
          "resizeMode": "cover",
          "backgroundColor": "#13144A",
          "enableFullScreenImage_legacy": true,
          "ios": {
            "image": "./assets/images/splash_screen.png",
            "resizeMode": "cover"
          },
          "android": {
            "image": "./assets/images/splash_android_screen.png",
            "resizeMode": "contain"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification_icon.png",
          "defaultChannel": "bidx-notification",
          "enableBackgroundRemoteNotifications": true
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "bidx-mobile-app",
          "organization": "bidx"
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "4dc02473-a97c-43d9-a785-44c886a395fb"
      }
    }
  }
}
